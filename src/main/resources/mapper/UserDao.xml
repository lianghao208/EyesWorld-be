<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.tvos.dao.UserDao">

  <!-- 对查询结果赋值给JavaBean（映射） -->
  <resultMap type="User" id="UserResult">
    <id column="id" jdbcType="INTEGER" property="id"/><!-- 主键属性 -->
    <result column="username" jdbcType="VARCHAR" property="username"/><!-- 普通属性 -->
    <result column="password" jdbcType="VARCHAR" property="password"/>
  </resultMap>

  <select id="getPassword" parameterType="String" resultType="String">
    SELECT password FROM user WHERE username = #{username}
  </select>


  <select id="getUsername" parameterType="Long" resultType="String">
    SELECT username FROM user WHERE id = #{userId}
  </select>
<!--  <select id="findUser" parameterType="long" resultMap="UserResult">
    SELECT * FROM user WHERE id = #{id:INTEGER}
  </select>


  <delete id="deleteUser" parameterType="User">
    DELETE FROM user WHERE id = #{id:INTEGER}
  </delete>
  -->

  <insert id="insert" parameterType="java.util.Map">
    INSERT INTO user
    (
    username,
    password
    )
    VALUES
    (
    #{username},
    #{password}
    )
    ON DUPLICATE KEY UPDATE password = #{password}
  </insert>

  <update id="updatePassword" parameterType="java.util.Map">
    UPDATE user SET
    password = #{password}
    WHERE
    username = #{username}
  </update>

<!--   用户名是否重复-->
  <select id="uniqueUsername" parameterType="String" resultType="Boolean">
    SELECT (count(*) = 0)
    FROM user
    WHERE username = #{username}

  </select>
</mapper>
